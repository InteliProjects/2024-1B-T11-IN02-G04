          <div class="position" style="background: linear-gradient(180deg, #FAAF58 0%, #E55D24 100%); top: 65px; left: 32px;">
            <span>3</span>
          </div>
          <div class="info">
            <div>Andrew</div>
            <div class="hours" style="color: #EC7735;">100h</div>
          </div>
        </div>
      </div>
      <div class="ranking-list">
        <div class="ranking-item highlight">
          <img src="https://via.placeholder.com/55x55" alt="You">
          <div class="info">
            <div class="name">You</div>
            <div class="points">30h</div>
          </div>
          <div class="rank">
            <div class="number">4</div>
          </div>
        </div>
        <div class="ranking-item">
          <img src="https://via.placeholder.com/55x55" alt="Martha Anderson">
          <div class="info">
            <div class="name">Martha Anderson</div>
            <div class="points">80h</div>
          </div>
          <div class="rank">
            <div class="number">5</div>
          </div>
        </div>
        <div class="ranking-item">
          <img src="https://via.placeholder.com/55x55" alt="Julia Clover">
          <div class="info">
            <div class="name">Julia Clover</div>
            <div class="points">50h</div>
          </div>
          <div class="rank">
            <div class="number">6</div>
          </div>
        </div>
        <div class="ranking-item">
          <img src="https://via.placeholder.com/55x55" alt="Carrie Henderson">
          <div class="info">
            <div class="name">Carrie Henderson</div>
            <div class="points">40h</div>
          </div>
          <div class="rank">
            <div class="number">7</div>
          </div>
        </div>
        <div class="ranking-item">
          <img src="https://via.placeholder.com/55x55" alt="Anastasia">
          <div class="info">
            <div class="name">Anastasia</div>
            <div class="points">30h</div>
          </div>
          <div class="rank">
            <div class="number">8</div>
          </div>
        </div>
        <div class="ranking-item">
          <img src="https://via.placeholder.com/55x55" alt="Michael Johnson">
          <div class="info">
            <div class="name">Michael Johnson</div>
            <div class="points">20h</div>
          </div>
          <div class="rank">
            <div class="number">9</div>
          </div>
        </div>
        <div class="ranking-item">
          <img src="https://via.placeholder.com/55x55" alt="Emily Clark">
          <div class="info">
            <div class="name">Emily Clark</div>
            <div class="points">10h</div>
          </div>
          <div class="rank">
            <div class="number">10</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
